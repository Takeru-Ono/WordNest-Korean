# iOS のバージョンを指定
platform :ios, '12.0'

target 'WordQuiz' do
  use_frameworks!

  # 🔥 AdMob のライブラリを追加
pod 'Google-Mobile-Ads-SDK', '~> 10.13'

  target 'WordQuizTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'WordQuizUITests' do
    inherit! :search_paths
    # Pods for UI testing
  end

end